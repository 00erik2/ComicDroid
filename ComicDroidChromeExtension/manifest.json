{
    "manifest_version": 2,
    "name": "Comic Droid",
    "description": "This extension saves your webcomics and reading point in them.",
    "version": "0.0.1",
    "background": {
        "persistent": false,
        "scripts": [ "background.js" ]
    },
    "browser_action": {
        "default_title": "Comic Droid",
        "default_icon": "icon.png",
        "default_popup": "popup.html"
    }
}